@page "/dashboard"
@attribute [Authorize]
@inject ITicketApiClient TicketApiClient
@using TicketManagement.Domain.Enums

<PageTitle>Dashboard</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">
                <i class="bi bi-speedometer2"></i> Dashboard
            </h2>
            <p class="text-muted">Resumen general del sistema de tickets</p>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando... </span>
            </div>
            <p class="mt-3 text-muted">Cargando estadísticas...</p>
        </div>
    }
    else if (_errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> @_errorMessage
        </div>
    }
    else
    {
        <!-- Estadísticas generales -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Tickets</h6>
                                <h2 class="mb-0">@_allTickets.Count</h2>
                            </div>
                            <div class="display-4 text-primary">
                                <i class="bi bi-ticket-detailed-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Abiertos</h6>
                                <h2 class="mb-0 text-primary">@_openTickets</h2>
                            </div>
                            <div class="display-4 text-primary">
                                <i class="bi bi-inbox-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">En Progreso</h6>
                            <h2 class="mb-0 text-warning">@_inProgressTickets</h2>
                        </div>
                        <div class="display-4 text-warning">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                    </div>
                </div>
            </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Cerrados</h6>
                                <h2 class="mb-0 text-success">@_closedTickets</h2>
                            </div>
                            <div class="display-4 text-success">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas por prioridad -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card border-start border-danger border-4">
                    <div class="card-body">
                        <h6 class="text-muted">Urgente</h6>
                        <h3 class="text-danger">@_urgentTickets</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-start border-warning border-4">
                    <div class="card-body">
                        <h6 class="text-muted">Alta</h6>
                        <h3 class="text-warning">@_highTickets</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-start border-info border-4">
                    <div class="card-body">
                        <h6 class="text-muted">Media</h6>
                        <h3 class="text-info">@_mediumTickets</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-start border-success border-4">
                    <div class="card-body">
                        <h6 class="text-muted">Baja</h6>
                        <h3 class="text-success">@_lowTickets</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mis estadísticas -->
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-folder-fill"></i> Mis Tickets
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>Total creados por mí: </span>
                            <h3 class="mb-0">@GetMyTicketsCount()</h3>
                        </div>
                        <a href="/tickets/my-tickets" class="btn btn-primary btn-sm">Ver mis tickets</a>
                    </div>
                </div>
            </div>

            <AuthorizeView Roles="Admin,Agent">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0">
                                <i class="bi bi-clipboard-check-fill"></i> Asignados a Mí
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span>Total asignados:</span>
                                <h3 class="mb-0">@GetAssignedTicketsCount()</h3>
                            </div>
                            <a href="/tickets/assigned" class="btn btn-warning btn-sm">Ver tickets asignados</a>
                        </div>
                    </div>
                </div>
            </AuthorizeView>
        </div>

        <!-- Acciones rápidas -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">Acciones Rápidas</h5>
                        <div class="d-flex gap-2">
                            <a href="/tickets" class="btn btn-primary">
                                <i class="bi bi-ticket-detailed-fill"></i> Ver Todos los Tickets
                            </a>
                            <a href="/tickets/create" class="btn btn-success">
                                <i class="bi bi-plus-circle-fill"></i> Crear Nuevo Ticket
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<TicketDto> _allTickets = new();
    private List<TicketDto> _myTickets = new();
    private List<TicketDto> _assignedTickets = new();

    private int _openTickets;
    private int _inProgressTickets;
    private int _closedTickets;

    private int _urgentTickets;
    private int _highTickets;
    private int _mediumTickets;
    private int _lowTickets;

    private bool _isLoading = true;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        try
        {
            _isLoading = true;
            _errorMessage = null;

            // ✅ CORREGIDO: Cargar todos los tickets (usar . Items del PaginatedList)
            var paginatedTickets = await TicketApiClient.GetTicketsAsync(pageNumber: 1, pageSize: 1000);
            _allTickets = paginatedTickets.Items;

            // Cargar mis tickets
            _myTickets = await TicketApiClient.GetMyTicketsAsync();

            // Cargar tickets asignados (solo para Admin/Agent)
            try
            {
                _assignedTickets = await TicketApiClient.GetAssignedTicketsAsync();
            }
            catch
            {
                _assignedTickets = new List<TicketDto>();
            }

            // Calcular estadísticas por estado
            _openTickets = _allTickets.Count(t => t.Status == TicketStatus.Open);
            _inProgressTickets = _allTickets.Count(t => t.Status == TicketStatus.InProgress);
            _closedTickets = _allTickets.Count(t => t.Status == TicketStatus.Closed || t.Status == TicketStatus.Resolved);

            // Calcular estadísticas por prioridad
            _urgentTickets = _allTickets.Count(t => t.Priority == TicketPriority.Critical);
            _highTickets = _allTickets.Count(t => t.Priority == TicketPriority.High);
            _mediumTickets = _allTickets.Count(t => t.Priority == TicketPriority.Medium);
            _lowTickets = _allTickets.Count(t => t.Priority == TicketPriority.Low);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al cargar el dashboard: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
        }
             private int GetMyTicketsCount()
        {
            return _myTickets?.Count ?? 0;
        }

             private int GetAssignedTicketsCount()
        {
            return _assignedTickets?.Count ?? 0;
        }
}