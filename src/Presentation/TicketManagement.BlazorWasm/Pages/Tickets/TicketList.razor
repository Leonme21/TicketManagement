@page "/tickets"
@attribute [Authorize]
@inject ITicketApiClient TicketApiClient
@inject NavigationManager Navigation

<PageTitle>Tickets</PageTitle>

<div class="container-fluid py-5 px-4 px-lg-5">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-5 gap-3">
        <div>
            <div class="d-flex align-items-center gap-3 mb-2">
                <div class="icon-wrapper d-flex align-items-center justify-content-center rounded-3 bg-emerald-subtle">
                    <i class="bi bi-ticket-detailed-fill text-emerald fs-4"></i>
                </div>
                <div>
                    <h2 class="mb-0 fw-bold text-slate-800">Tickets</h2>
                    <p class="text-slate-500 mb-0 small">Todos los tickets del sistema</p>
                </div>
            </div>
        </div>
        <a href="/tickets/create" class="btn btn-emerald btn-lg">
            <i class="bi bi-plus-circle-fill me-2"></i> Crear Ticket
        </a>
    </div>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-emerald" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-slate-500">Cargando tickets...</p>
        </div>
    }
    else if (_errorMessage != null)
    {
        <div class="alert alert-danger border-0 rounded-3 d-flex align-items-center gap-2">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>@_errorMessage</span>
        </div>
    }
    else
    {
        <!-- Filtros -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-4">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-medium text-slate-700 small">Estado</label>
                        <select class="form-select border-slate-200" @bind="_filterStatus" @bind:after="ApplyFilters">
                            <option value="">Todos</option>
                            <option value="Open">Abierto</option>
                            <option value="InProgress">En Progreso</option>
                            <option value="Closed">Cerrado</option>
                            <option value="Resolved">Resuelto</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-medium text-slate-700 small">Prioridad</label>
                        <select class="form-select border-slate-200" @bind="_filterPriority" @bind:after="ApplyFilters">
                            <option value="">Todas</option>
                            <option value="Low">Baja</option>
                            <option value="Medium">Media</option>
                            <option value="High">Alta</option>
                            <option value="Urgent">Urgente</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-medium text-slate-700 small">Buscar</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-slate-200">
                                <i class="bi bi-search text-slate-400"></i>
                            </span>
                            <input type="text" class="form-control border-slate-200 border-start-0"
                                   placeholder="Buscar por título..."
                                   @bind="_searchText" @bind:after="ApplyFilters" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-outline-slate w-100" @onclick="ClearFilters">
                            <i class="bi bi-x-circle me-1"></i> Limpiar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        @if (!_filteredTickets.Any())
        {
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <div class="icon-wrapper mx-auto d-flex align-items-center justify-content-center rounded-circle bg-slate-100 mb-3">
                        <i class="bi bi-inbox text-slate-400 fs-4"></i>
                    </div>
                    <p class="text-slate-500 mb-0">No se encontraron tickets con los filtros aplicados.</p>
                </div>
            </div>
        }
        else
        {
            <p class="text-slate-500 small mb-3">
                Mostrando <span class="fw-semibold text-slate-700">@_filteredTickets.Count</span> de
                <span class="fw-semibold text-slate-700">@_tickets.Count</span> tickets
            </p>

            <div class="row g-4">
                @foreach (var ticket in _filteredTickets)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 card-hover"
                             style="cursor: pointer;"
                             @onclick="() => NavigateToDetails(ticket.Id)">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title mb-0 fw-semibold text-slate-800 pe-2">@ticket.Title</h5>
                                    <span class="badge rounded-pill @GetStatusBadgeClass(ticket.Status)">
                                        @GetStatusLabel(ticket.Status)
                                    </span>
                                </div>

                                <p class="card-text text-slate-500 small mb-3">
                                    @TruncateText(ticket.Description, 100)
                                </p>

                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    <span class="badge rounded-pill @GetPriorityBadgeClass(ticket.Priority)">
                                        @GetPriorityLabel(ticket.Priority)
                                    </span>
                                    <span class="badge rounded-pill bg-slate-100 text-slate-600">
                                        @ticket.CategoryName
                                    </span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center text-slate-400 small border-top pt-3">
                                    <div class="d-flex align-items-center gap-1">
                                        <i class="bi bi-person"></i>
                                        <span>@ticket.CreatorName</span>
                                    </div>
                                    <div class="d-flex align-items-center gap-1">
                                        <i class="bi bi-calendar3"></i>
                                        <span>@ticket.CreatedAt.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>

                                @if (ticket.AssignedToName != null)
                                {
                                    <div class="mt-2 text-slate-500 small d-flex align-items-center gap-1">
                                        <i class="bi bi-person-check text-emerald"></i>
                                        <span>@ticket.AssignedToName</span>
                                    </div>
                                }

                                <div class="mt-2 d-flex gap-3 text-slate-400 small">
                                    <span class="d-flex align-items-center gap-1">
                                        <i class="bi bi-chat-dots"></i> @ticket.CommentsCount
                                    </span>
                                    <span class="d-flex align-items-center gap-1">
                                        <i class="bi bi-paperclip"></i> @ticket.AttachmentsCount
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    private List<TicketDto> _tickets = new();
    private List<TicketDto> _filteredTickets = new();
    private bool _isLoading = true;
    private string? _errorMessage;

    private string _filterStatus = "";
    private string _filterPriority = "";
    private string _searchText = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadTickets();
    }

    private async Task LoadTickets()
    {
        try
        {
            _isLoading = true;
            _errorMessage = null;

            var paginatedTickets = await TicketApiClient.GetTicketsAsync(pageNumber: 1, pageSize: 1000);
            _tickets = paginatedTickets.Items;

            ApplyFilters();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error al cargar los tickets: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        _filteredTickets = _tickets.Where(t =>
            (string.IsNullOrEmpty(_filterStatus) || t.Status.Equals(_filterStatus, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(_filterPriority) || t.Priority.Equals(_filterPriority, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(_searchText) || t.Title.Contains(_searchText, StringComparison.OrdinalIgnoreCase))
        ).ToList();
    }

    private void ClearFilters()
    {
        _filterStatus = "";
        _filterPriority = "";
        _searchText = "";
        ApplyFilters();
    }

    private void NavigateToDetails(int id)
    {
        Navigation.NavigateTo($"/tickets/{id}");
    }

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Open" => "badge-open",
        "InProgress" => "badge-in-progress",
        "Closed" => "badge-closed",
        "Resolved" => "badge-resolved",
        _ => "bg-secondary"
    };

    private string GetStatusLabel(string status) => status switch
    {
        "Open" => "Abierto",
        "InProgress" => "En Progreso",
        "Closed" => "Cerrado",
        "Resolved" => "Resuelto",
        _ => status
    };

    private string GetPriorityBadgeClass(string priority) => priority switch
    {
        "Low" => "badge-low",
        "Medium" => "badge-medium",
        "High" => "badge-high",
        "Urgent" => "badge-urgent",
        _ => "bg-secondary"
    };

    private string GetPriorityLabel(string priority) => priority switch
    {
        "Low" => "Baja",
        "Medium" => "Media",
        "High" => "Alta",
        "Urgent" => "Urgente",
        _ => priority
    };

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }
}