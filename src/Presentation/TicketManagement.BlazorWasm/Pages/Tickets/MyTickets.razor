@page "/tickets/my-tickets"
@attribute [Authorize]
@inject ITicketApiClient TicketApiClient
@inject NavigationManager Navigation

<PageTitle>Mis Tickets</PageTitle>

<div class="container-fluid py-5 px-4 px-lg-5">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-5 gap-3">
        <div>
            <div class="d-flex align-items-center gap-3 mb-2">
                <div class="icon-wrapper d-flex align-items-center justify-content-center rounded-3 bg-emerald-subtle">
                    <i class="bi bi-folder-fill text-emerald fs-4"></i>
                </div>
                <div>
                    <h2 class="mb-0 fw-bold text-slate-800">Mis Tickets</h2>
                    <p class="text-slate-500 mb-0 small">Tickets que has creado</p>
                </div>
            </div>
        </div>
        <a href="/tickets/create" class="btn btn-emerald btn-lg">
            <i class="bi bi-plus-circle-fill me-2"></i> Crear Ticket
        </a>
    </div>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-emerald" role="status"></div>
            <p class="mt-3 text-slate-500">Cargando tus tickets...</p>
        </div>
    }
    else if (_errorMessage != null)
    {
        <div class="alert alert-danger border-0 rounded-3 d-flex align-items-center gap-2">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>@_errorMessage</span>
        </div>
    }
    else if (!_tickets.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <div class="icon-wrapper mx-auto d-flex align-items-center justify-content-center rounded-circle bg-slate-100 mb-3">
                    <i class="bi bi-inbox text-slate-400 fs-4"></i>
                </div>
                <p class="text-slate-600 mb-2">No has creado ningún ticket aún.</p>
                <a href="/tickets/create" class="btn btn-emerald">
                    <i class="bi bi-plus-circle me-2"></i> Crear uno ahora
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var ticket in _tickets)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 card-hover"
                         style="cursor: pointer;"
                         @onclick="@(() => Navigation.NavigateTo($"/tickets/{ticket.Id}"))">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0 fw-semibold text-slate-800 pe-2">@ticket.Title</h5>
                                <span class="badge rounded-pill @GetStatusBadgeClass(ticket.Status)">
                                    @GetStatusLabel(ticket.Status)
                                </span>
                            </div>
                            <p class="card-text text-slate-500 small mb-3">@TruncateText(ticket.Description, 100)</p>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                <span class="badge rounded-pill @GetPriorityBadgeClass(ticket.Priority)">
                                    @GetPriorityLabel(ticket.Priority)
                                </span>
                                <span class="badge rounded-pill bg-slate-100 text-slate-600">@ticket.CategoryName</span>
                            </div>
                            <div class="d-flex justify-content-between text-slate-400 small border-top pt-3">
                                <span class="d-flex align-items-center gap-1">
                                    <i class="bi bi-calendar3"></i> @ticket.CreatedAt.ToString("dd/MM/yyyy")
                                </span>
                                <span class="d-flex align-items-center gap-1">
                                    <i class="bi bi-chat-dots"></i> @ticket.CommentsCount
                                </span>
                            </div>
                            @if (ticket.AssignedToName != null)
                            {
                                <div class="mt-2 text-slate-500 small d-flex align-items-center gap-1">
                                    <i class="bi bi-person-check text-emerald"></i> @ticket.AssignedToName
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<TicketDto> _tickets = new();
    private bool _isLoading = true;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadTickets();
    }

    private async Task LoadTickets()
    {
        try
        {
            _isLoading = true;
            _tickets = await TicketApiClient.GetMyTicketsAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Open" => "badge-open",
        "InProgress" => "badge-in-progress",
        "Closed" => "badge-closed",
        "Resolved" => "badge-resolved",
        _ => "bg-secondary"
    };

    private string GetStatusLabel(string status) => status switch
    {
        "Open" => "Abierto",
        "InProgress" => "En Progreso",
        "Closed" => "Cerrado",
        "Resolved" => "Resuelto",
        _ => status
    };

    private string GetPriorityBadgeClass(string priority) => priority switch
    {
        "Low" => "badge-low",
        "Medium" => "badge-medium",
        "High" => "badge-high",
        "Urgent" => "badge-urgent",
        _ => "bg-secondary"
    };

    private string GetPriorityLabel(string priority) => priority switch
    {
        "Low" => "Baja",
        "Medium" => "Media",
        "High" => "Alta",
        "Urgent" => "Urgente",
        _ => priority
    };

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }
}